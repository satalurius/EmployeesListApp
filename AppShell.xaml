<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmployeesListApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EmployeesListApp"
    xmlns:pages="clr-namespace:EmployeesListApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
            <ShellContent
                Title="Главная"
                Icon="dotnet_bot.svg"
                ContentTemplate="{DataTemplate pages:EmployeesPage}"
                Route="EmployeesPage"
            />
            <ShellContent
                Title="О проекте"
                Icon="dotnet_bot.svg"
                ContentTemplate="{DataTemplate pages:EmployeesPage}"
                Route="."
            />
    </TabBar>

</Shell>
