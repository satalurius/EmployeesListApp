<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeesListApp.Views.EmployeePage"
             xmlns:toolkits="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="EmployeePage">
    <ScrollView>
        <StackLayout 
            Margin="20"
            >
            <VerticalStackLayout  BindingContext="{Binding Employee}">
                <Label 
                    HorizontalTextAlignment="Center"
                    Style="{DynamicResource TitleStyle}"
                    Text="{Binding FullName}"/>
                <Image
                    Source="{Binding PhotoUrl}"
                    HeightRequest="200"
                    WidthRequest="200"
                />
                <Label
                    LineBreakMode="WordWrap" 
                    Style="{DynamicResource BodyStyle}"
                    Text="{Binding Description}"/>

            </VerticalStackLayout>
            <!--TODO: Переверстать под кнопку как принятно в андройде. -->
            <Button Text="Редактировать"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="10"
                    Command="{Binding EditEmployeeCommand}"/>
        </StackLayout>
    </ScrollView>

</ContentPage>